<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日時</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% topics.each do |topic| %>
      <tr>
        <td><%= topic.id %></td>
        <td><%= link_to "#{topic.title}",topic %></td>
        <td><%= topic.user.name %></td>
        <td><%= topic.created_at.to_s(:published_on) %></td>
        <% if current_user?(topic.user)%>
        <td><%= link_to '削除', topic, class: 'btn btn-outline-dark', method: :delete %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>